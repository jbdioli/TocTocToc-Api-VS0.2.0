<?xml version="1.0" encoding="utf-8"?>

<resources>

  <style name="MainTheme" parent="MainTheme.Base">
    <!-- As of Xamarin.Forms 4.6 the theme has moved into the Forms binary -->
    <!-- If you want to override anything you can do that here. -->
    <!-- Underneath are a couple of entries to get you started. -->

    <!-- Set theme colors from https://aka.ms/material-colors -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/TTTPurple</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/TTTPurple</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#61007D</item>
    <item name="android:datePickerDialogTheme">@style/TocTocTocDatePickerDialogTheme</item>
  </style>

  <style name="TocTocTocDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/TTTLightPurple</item>
    <item name="android:datePickerStyle">@style/TocTocTocPickerDialogStyle</item>
  </style>

  <style name="TocTocTocPickerDialogStyle" parent="@android:style/Widget.Material.Light.DatePicker">
    <item name="android:headerBackground">@color/TTTLightPurple</item>
  </style>

  <!-- Inherit from the light Material Theme -->
  <!--<style name="TocTocTocTheme" parent="android:Theme.Material">
      <item name="android:colorPrimaryDark">@color/toctoctocPurple</item>
      <item name="android:navigationBarColor">@color/toctoctocPurple</item>
    </style>-->

  <style name="splashscreen" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>
</resources>